<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="change_margin"
        android:title="@string/pref_title_change_margin"
        android:defaultValue="@string/pref_change_margin_default_value"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:digits="0123456789"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="walking_speed"
        android:title="@string/pref_title_select_walking_speed"
        android:defaultValue="@string/pref_walking_speed_default_value"
        android:entries="@array/pref_walking_speeds_list"
        android:entryValues="@array/pref_walking_speeds_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="route_type"
        android:title="@string/pref_title_select_route_type"
        android:defaultValue="@string/pref_route_type_default_value"
        android:entries="@array/pref_route_type_list"
        android:entryValues="@array/pref_route_type_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
